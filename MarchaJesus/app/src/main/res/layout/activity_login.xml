<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.marcha.jesus.particleview.ParticleView
        android:id="@+id/pv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/azul_medio"
        pv:pv_host_text="Marcha para "
        pv:pv_particle_text="Jesus"
        pv:pv_text_anim_time="3000"
        pv:pv_spread_anim_time="2000"
        pv:pv_host_text_anim_time="3000" />

    <Button
        android:id="@+id/btEntrar"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:background="@drawable/fundo"
        android:text="Entrar"
        android:textSize="20sp"
        android:textColor="@color/azul_claro"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:onClick="onClickEntrar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>