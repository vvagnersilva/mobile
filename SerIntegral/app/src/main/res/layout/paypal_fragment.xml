<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_gravity="center_horizontal"
        android:text="" />

    <serintegral.com.br.util.currencyedittext.CurrencyEditText
        android:id="@+id/edValor"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="5"
        app:allow_negative_values="false"
        android:layout_weight="0.07" />

    <TextView
        android:id="@+id/txtProverbio"
        android:textColor="@color/colorAccent"
        android:layout_width="373dp"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:text=""
        android:layout_weight="0.42" />

    <TextView
        android:textColor="@color/azul_escuro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:text="Mateus 10:42" />

    <Button
        android:id="@+id/doar"
        android:layout_width="119dp"
        android:layout_height="68dp"
        android:background="@drawable/fundo"
        android:text="Doar"
        android:textSize="20sp"
        android:textColor="@color/branco"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:onClick="onClickDoar"
        android:layout_marginRight="16dp" />

</LinearLayout>
