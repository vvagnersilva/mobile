<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:elevation="4dp"
    android:minHeight="57dp"
    android:subtitleTextColor="@color/colorPrimary"
    android:theme="@style/AppTheme"
    android:title="@string/app_title"
    android:titleTextAppearance="@color/colorLightPrimary"
    android:titleTextColor="@color/colorLightPrimary"
    app:popupTheme="@style/ActionBarPopupThemeOverlay"
    app:subtitleTextColor="@color/white"
    app:theme="@style/ThemeOverlay.AppCompat.Light"
    app:titleTextAppearance="@color/white"
    app:titleTextColor="@color/white" />
