<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.livroandroid.salvarestado" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="br.com.livroandroid.salvarestado.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="br.com.livroandroid.salvarestado.DemoSalvarEstadoActivity"
            android:label="@string/salvar_estado"
            android:parentActivityName="br.com.livroandroid.salvarestado.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.salvarestado.MainActivity" />
        </activity>
        <activity
            android:name="br.com.livroandroid.salvarestado.ProgressBarDemoActivity"
            android:label="@string/title_activity_progress_bar_demo"
            android:parentActivityName="br.com.livroandroid.salvarestado.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.salvarestado.MainActivity" />
        </activity>
    </application>

</manifest>
