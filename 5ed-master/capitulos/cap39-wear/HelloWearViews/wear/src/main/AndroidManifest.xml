<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.livroandroid.helloviews" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainWearActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ex1.CardFragmentActivity" />
        <activity android:name=".ex2.CustomCardFragmentActivity" />
        <activity android:name=".ex3.CardFrameActivity" />
        <activity android:name=".ex4.HelloListViewActivity" />
        <activity android:name=".ex4.CarroActivity" />
        <activity android:name=".ex5.HelloViewPagerActivity" />
        <activity android:name=".ex6.HelloGridViewPagerActivity" />
        <activity android:name=".ex7.FullScreenActivity" android:theme="@style/FullScreenTheme" />
        <activity android:name=".ex8.ConfirmationDelayedActivity" />
        <activity android:name="android.support.wearable.activity.ConfirmationActivity" />

    </application>

</manifest>
