<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.livroandroid.multimidia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".video.DemoVideoViewSdCardActivity"
            android:label="@string/title_activity_video"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".video.DemoVideoViewRawActivity"
            android:label="@string/title_activity_video"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".video.DemoVideoViewURLActivity"
            android:label="@string/title_activity_video"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".camera.DemoCameraThumbActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".camera.DemoCameraArquivoActivity"
            android:label="@string/title_activity_camera"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".video.DemoRecordVideoActivity"
            android:label="@string/title_activity_video"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".audio.DemoRecordAudioActivity"
            android:label="@string/title_activity_audio"
