            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".audio.DemoMediaPlayerRawActivity"
            android:label="@string/title_activity_audio"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>
        <activity
            android:name=".audio.DemoMediaPlayerSdCardActivity"
            android:label="@string/title_activity_audio"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.livroandroid.multimidia.MainActivity" />
        </activity>

    </application>

</manifest>
